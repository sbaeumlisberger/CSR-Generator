<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CSRGenerator.Views.ResultView">
  
  <StackPanel>

    <Button HorizontalAlignment="Left" Content="← Back" Command="{Binding Back}"/>

    <TextBox Margin="0,16,0,0" MinHeight="60" AcceptsReturn="True" Text="{Binding GeneratedCSR}"/>
    <Button Margin="0,4,0,0" HorizontalAlignment="Left" Content="Save CSR" Command="{Binding SaveCSR}"/>

    <TextBox Margin="0,16,0,0" MinHeight="60" AcceptsReturn="True" Text="{Binding PrivateKey}"/>
    <Button Margin="0,4,0,0" HorizontalAlignment="Left" Content="Save Private Key" Command="{Binding SavePrivateKey}"/>

  </StackPanel>
  
</UserControl>
